<launch>

    <arg name="tf_tx"/>
    <arg name="tf_ty"/>
    <arg name="tf_tz"/>
    <arg name="tf_rx"/>
    <arg name="tf_ry"/>
    <arg name="tf_rz"/>
    <arg name="frame_id"       default="base_link"/>
    <arg name="child_frame_id" default="velodyne"/>
    <arg name="period_in_ms"   default="10"/>
    <node pkg="tf" type="static_transform_publisher" name="base_link_to_localizer" args="$(arg tf_tx) $(arg tf_ty) $(arg tf_tz) $(arg tf_rz) $(arg tf_ry) $(arg tf_rx) $(arg frame_id) $(arg child_frame_id) $(arg period_in_ms)"/>

