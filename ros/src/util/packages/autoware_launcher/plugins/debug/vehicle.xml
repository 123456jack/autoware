<launch>

    <arg name="parent_frame"  default="base_link"/>
    <arg name="child_frame"   default="velodyne"/>
    <arg name="period_in_ms"  default="10"/>
    <arg name="tx"/>
    <arg name="ty"/>
    <arg name="tz"/>
    <arg name="rx"/>
    <arg name="ry"/>
    <arg name="rz"/>

    <node pkg="tf" type="static_transform_publisher" name="static_transform_publisher"
        args="$(arg tx) $(arg ty) $(arg tz) $(arg rz) $(arg ry) $(arg rx) $(arg parent_frame) $(arg child_frame) $(arg period_in_ms)" />

　　<!-- ['roslaunch', 'model_publisher', 'vehicle_model.launch'] -->
　　<!-- ['roslaunch', 'runtime_manager', 'setup_vehicle_info.launch'] -->

</launch>